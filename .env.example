# Openrook Environment Variables
# Copy this file to .env and fill in your values

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ALLOWED_USER_ID=your_telegram_user_id_here

# PostgreSQL (optional, if using postgres instead of sqlite)
POSTGRES_HOST=localhost
POSTGRES_USER=openrook
POSTGRES_PASSWORD=your_password_here

# AWS S3 (optional, if using s3 storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY=your_access_key_here
AWS_SECRET_KEY=your_secret_key_here
S3_BUCKET=your_bucket_name_here

# OpenAI TTS (uses OPENAI_API_KEY above)
